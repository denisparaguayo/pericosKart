---
import MainLayout from '../../layouts/MainLayout.astro';
import { galleryAlbums } from '../../lib/gallery';

const raceAlbums = galleryAlbums.filter((a) => a.category !== 'social');
const socialAlbums = galleryAlbums.filter((a) => a.category === 'social');
---

<MainLayout
	title="Galer√≠a ¬∑ Pericos"
	description="Carreras, podios y momentos fuera de pista con amigos."
	image="/pericos.jpg"
	path="/galeria">
	<section class="mb-6">
		<h1 class="text-2xl font-semibold tracking-tight sm:text-3xl">Galer√≠a</h1>
		<p class="mt-2 text-sm text-slate-300">
			Carreras, podios y momentos con amigos. Eleg√≠ una fecha o una salida para
			ver sus fotos.
		</p>
	</section>

	{/* üèÅ CARRERAS */}
	{
		raceAlbums.length > 0 && (
			<section class="mb-8">
				<h2 class="mb-3 text-sm font-semibold uppercase tracking-[0.22em] text-slate-400">
					Carreras
				</h2>
				<div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
					{raceAlbums.map((album) => (
						<a
							href={`/galeria/${album.id}`}
							class="group overflow-hidden rounded-xl border border-slate-800 bg-[#0b0b19] hover:border-fuchsia-500/70 hover:bg-slate-900/80 transition">
							<div class="aspect-[4/3] overflow-hidden">
								<img
									src={album.coverImage}
									alt={album.title}
									loading="lazy"
									class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
								/>
							</div>
							<div class="px-3 py-2 text-xs">
								<p class="text-sm font-semibold text-slate-100">
									{album.title}
								</p>
								{album.date && (
									<p class="mt-1 text-[11px] text-slate-400">
										{new Date(album.date).toLocaleDateString('es-PY', {
											day: '2-digit',
											month: 'short',
											year: 'numeric',
										})}
									</p>
								)}
							</div>
						</a>
					))}
				</div>
			</section>
		)
	}

	{/* ü´∂ MOMENTOS FUERA DE PISTA */}
	{
		socialAlbums.length > 0 && (
			<section>
				<h2 class="mb-3 text-sm font-semibold uppercase tracking-[0.22em] text-slate-400">
					Momentos fuera de pista
				</h2>
				<div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3">
					{socialAlbums.map((album) => (
						<a
							href={`/galeria/${album.id}`}
							class="group overflow-hidden rounded-xl border border-slate-800 bg-[#0b0b19] hover:border-fuchsia-500/70 hover:bg-slate-900/80 transition">
							<div class="aspect-[4/3] overflow-hidden">
								<img
									src={album.coverImage}
									alt={album.title}
									loading="lazy"
									class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
								/>
							</div>
							<div class="px-3 py-2 text-xs">
								<p class="text-sm font-semibold text-slate-100">
									{album.title}
								</p>
							</div>
						</a>
					))}
				</div>
			</section>
		)
	}

	{
		raceAlbums.length === 0 && socialAlbums.length === 0 && (
			<p class="text-sm text-slate-400">
				Todav√≠a no se cargaron fotos en la galer√≠a.
			</p>
		)
	}
</MainLayout>
